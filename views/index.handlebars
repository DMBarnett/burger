<h1>The Menu</h1>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h3>Burgers on Deck</h3>
            <ul>
                {{#each burger}}
                    {{#unless devoured}}
                        {{> burgerBarButtons devour=0}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h3>Burgers DEVOURED</h3>
            {{#each burger}}
                {{#if devoured}}
                    {{> burgerBarButtons devour=1}}
                {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h5>Order Here!</h5>
            <form class="create-form">
                <div class="form-group">
                    <label for="newBurger">Burger Name</label>
                    <input type="text" id="newBurger" placeholder="Burger name">
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>